<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.myapplication.view.fragments.NFTopHeadlinesFragment"
        android:label="@string/headlines_fragment_title"
        tools:layout="@layout/fragment_top_headlines">

        <action
            android:id="@+id/action_TopHeadlinesFragment_to_DetailsFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.myapplication.view.fragments.NFNewsDetailsFragment"
        android:label="@string/details_fragment_title"
        tools:layout="@layout/fragment_news_details">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
</navigation>